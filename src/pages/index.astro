---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---
<Layout title="John Ogletree // Home">
    <section class="hero">
        <div class="hero-content">
            <p class="hero-intro">John Ogletree — Graphic Artist</p>
            <h1>Retro Computing & Design Services</h1>
            <p class="subtitle">Partnering with startups and tech companies to craft digital experiences from a bygone future.</p>
            <div class="hero-cta">
                <a href="/projects" class="cta-button">View Work</a>
                <a href="/contact" class="cta-button secondary">Get in Touch</a>
            </div>
        </div>
        <div class="hero-image">
            <div class="image-placeholder">
                <svg viewBox="0 0 400 400" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <defs>
                        <linearGradient id="grid-grad" x1="50%" y1="0%" x2="50%" y2="100%">
                            <stop offset="0%" stop-color="#F800F8" stop-opacity="1"/>
                            <stop offset="100%" stop-color="#00FF00" stop-opacity="1"/>
                        </linearGradient>
                    </defs>
                    <rect width="400" height="400" fill="var(--color-bg)"/>
                    <path d="M 50 350 L 150 150 L 250 150 L 350 350 Z" stroke="url(#grid-grad)" stroke-width="2" fill="none" opacity="0.2"/>
                    <g stroke="url(#grid-grad)" stroke-width="2">
                        <line x1="200" y1="100" x2="200" y2="400" />
                        <line x1="0" y1="400" x2="400" y2="400" />
                        <path d="M0 400 L 200 100 L 400 400"/>
                        <line x1="50" y1="400" x2="200" y2="150" />
                        <line x1="100" y1="400" x2="200" y2="200" />
                        <line x1="150" y1="400" x2="200" y2="250" />
                        <line x1="250" y1="400" x2="200" y2="250" />
                        <line x1="300" y1="400" x2="200" y2="200" />
                        <line x1="350" y1="400" x2="200" y2="150" />
                        <line x1="25" y1="275" x2="375" y2="275" opacity="0.5"/>
                        <line x1="50" y1="250" x2="350" y2="250" opacity="0.5"/>
                    </g>
                </svg>
            </div>
        </div>
    </section>

    <section class="profile-section">
        <div class="profile-card">
            <div class="profile-header">
                <div class="avatar">
                    <svg width="100" height="100" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect width="100" height="100" fill="var(--color-bg)"/>
                        <circle cx="50" cy="40" r="20" fill="var(--color-accent)"/>
                        <path d="M20 80 A 30 30, 0, 0, 1, 80 80" fill="var(--color-accent)"/>
                    </svg>
                </div>
                <div class="profile-info">
                    <h2>About Me</h2>
                    <span>Martinez, Georgia</span>
                </div>
            </div>
            <div class="profile-bio">
                <p>A freelance graphic artist with nearly a decade of experience turning dreams into pixels. I use clean, strategic design and meticulous craft to bring your brand's vision to life.</p>
            </div>
            <div class="skills-social-wrapper">
                <div class="profile-skills">
                    <h3>Core Skills</h3>
                    <div class="skills-list">
                        <span>Brand Identity</span>
                        <span>UI/UX Design</span>
                        <span>Art Direction</span>
                        <span>Pixel Art</span>
                    </div>
                </div>
                <div class="profile-social">
                    <a href="#" class="social-link">LinkedIn</a>
                    <a href="#" class="social-link">Twitter</a>
                    <a href="#" class="social-link">Instagram</a>
                </div>
            </div>
        </div>
    </section>

    <section class="services-section">
        <div class="section-header">
            <h2>Service Offerings</h2>
            <p class="section-subtitle">Comprehensive design solutions across three core areas.</p>
            <div class="services-cta">
                <a href="/services" class="cta-button secondary">View All Services</a>
            </div>
        </div>
        <div class="services-grid">
            <div class="service-category-card">
                <h3>Brand & Identity</h3>
                <p class="service-category-description">Crafting memorable identities that articulate your unique value.</p>
                <hr class="service-divider">
                <ul class="service-list">
                    <li>Logo & Visual Systems</li>
                    <li>Brand Strategy</li>
                    <li>Marketing Collateral</li>
                </ul>
            </div>
            <div class="service-category-card">
                <h3>Digital & UI/UX Design</h3>
                <p class="service-category-description">Designing beautiful and intuitive digital experiences.</p>
                <hr class="service-divider">
                <ul class="service-list">
                    <li>Website & App UI Design</li>
                    <li>Interactive Prototyping</li>
                    <li>Design Systems</li>
                </ul>
            </div>
            <div class="service-category-card">
                <h3>Creative Support</h3>
                <p class="service-category-description">Providing ongoing creative partnership to ensure brand consistency.</p>
                <hr class="service-divider">
                <ul class="service-list">
                    <li>Art Direction</li>
                    <li>Social Media Graphics</li>
                    <li>Presentation Design</li>
                </ul>
            </div>
        </div>
    </section>

    <section class="projects-section">
        <div class="section-header">
            <h2>Featured Projects</h2>
            <p class="section-subtitle">Selected work that demonstrates my design approach.</p>
            <div class="projects-cta">
                <a href="/projects" class="cta-button secondary">View All Projects</a>
            </div>
        </div>
        <div class="projects-grid">
            <div class="project-card">
                <div class="project-image"></div>
                <div class="project-content">
                    <p class="project-category">Logo Design</p>
                    <h3>Crestwood Guild</h3>
                </div>
            </div>
            <div class="project-card">
                <div class="project-image"></div>
                <div class="project-content">
                    <p class="project-category">Motion Graphics</p>
                    <h3>Odyssey Documentary</h3>
                </div>
            </div>
        </div>
    </section>

    <section class="blog-section">
        <div class="section-header">
            <h2>Latest Thoughts</h2>
            <p class="section-subtitle">A collection of design insights and tutorials.</p>
            <div class="blog-cta">
                <a href="/articles" class="cta-button secondary">View All Posts</a>
            </div>
        </div>
        <div class="blog-content-wrapper">
            <div class="blog-grid">
                <article class="blog-card">
                    <div class="blog-meta">
                        <span class="blog-category">Design Process</span>
                        <time datetime="2025-07-30">July 30, 2025</time>
                    </div>
                    <h3>Reducing Cognitive Load</h3>
                    <a href="#" class="blog-link">Read Post →</a>
                </article>
                <article class="blog-card">
                    <div class="blog-meta">
                        <span class="blog-category">Client Review</span>
                        <time datetime="2025-06-22">June 22, 2025</time>
                    </div>
                    <h3>Working with Nova Fintech</h3>
                    <a href="#" class="blog-link">Read Review →</a>
                </article>
                <article class="blog-card">
                    <div class="blog-meta">
                        <span class="blog-category">Design Trends</span>
                        <time datetime="2025-05-11">May 11, 2025</time>
                    </div>
                    <h3>The Return of Brutalism</h3>
                    <a href="#" class="blog-link">Read Post →</a>
                </article>
            </div>
        </div>
    </section>
</Layout>